@page
@model AceJobAgency.Pages.Users.LoginModel
@{
}
<form class="mt-3" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-md-8">
            <div class="row mb-3">
            <label class="col-sm-3 col-form-label" asp-for="LModel.Email"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="LModel.Email" />
                <span asp-validation-for="LModel.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
            <label class="col-sm-3 col-form-label" asp-for="LModel.Password"></label>
                <div class="col-sm-9">
                <input class="form-control" type="password" asp-for="LModel.Password" />
                <span asp-validation-for="LModel.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
            <label class="col-sm-3 col-form-label" asp-for="LModel.RememberMe"></label>
                <div class="col-sm-9 d-flex align-items-center">
                    <div class="form-check form-check-inline">
                    @Html.CheckBoxFor(m => m.LModel.RememberMe, new {@class = "form-check-input"})
                        <label class="form-check-label">Remember Me</label>
                    </div>
                </div>
            </div>

        </div>

    <div>
        <input type="submit" value="Login" class="btn btn-primary" />
        <a class="btn btn-secondary ms-2" href="/Users/Register" >Register</a>
    </div>
</form>